<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="6dp"
    android:radius="12dp"
    android:backgroundTint="#5e4509">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:letterSpacing="0.03"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/text_customer_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact: 09123456789"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_customer_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: Manila, Philippines"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/text_customer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: example@email.com"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />

        <!-- NEW Debt Display -->
        <TextView
            android:id="@+id/text_customer_debt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance: â‚±0.00"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/btn_edit_customer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Edit"
                android:textColor="#1565c0"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:drawablePadding="6dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/btn_delete_customer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Delete"
                android:textColor="#c62828"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:drawableLeft="@android:drawable/ic_menu_delete"
                android:drawablePadding="6dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
